# http://editorconfig.org

root=true

[*]
indent_style=space
indent_size=4
charset=utf-8
end_of_line=lf
insert_final_newline=true
trim_trailing_whitespace=true

[*.py]
max_line_length=80
quote_type=single
not_skip=__init__.py
multi_line_output=5
known_django=django
known_first_party=blog.blog
default_section=THIRDPARTY
sections=FUTURE,STDLIB,THIRDPARTY,DJANGO,FIRSTPARTY,LOCALFOLDER

[*.{html,css,scss,json,yml}]
max_line_length=120
indent_style = space
quote_type=double

[*.js]
max_line_length=120
quote_type=double

[*.{md, rst}]
max_line_length=80
trim_trailing_whitespace=false
