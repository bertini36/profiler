# http://editorconfig.org

root=true

[*]
indent_style=space
indent_size=4
charset=utf-8
end_of_line=lf
insert_final_newline=true
trim_trailing_whitespace=true

[*.py]
max_line_length=80

[*.{html,css,scss,json,yml}]
max_line_length=120

[*.{md, rst}]
max_line_length=120
trim_trailing_whitespace=false
